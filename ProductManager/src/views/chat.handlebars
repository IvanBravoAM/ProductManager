<div class="bg-white rounded-lg p-4 shadow">
  <h1 class="bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium">Chat real</h1>
  <div class=" h-64 border p-4 overflow-auto">
    
    <ul class="divide-y divide-gray-100" id="messagesList">
        {{#each messages}}
        <h3 class="text-base font-semibold leading-7 text-gray-900">{{this.user}}</h3>
        <li class="flex justify-between gap-x-6 py-5">
            {{this.message}}
        </li>
        {{/each}}
    </ul>
  </div>
  <form class="bg-white rounded-lg p-4 shadow" id="messageForm">
    <div class="mb-2">
      <label class="block text-gray-700 font-bold mb-1" for="user">User:</label>
      <input class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-400" type="text" id="userInput" name="userInput" placeholder="Your username">
    </div>
    <div class="mb-2">
      <label class="block text-gray-700 font-bold mb-1" for="message">Message:</label>
      <textarea class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-400" id="messageInput" name="messageInput" rows="3" placeholder="Type your message"></textarea>
    </div>
    <button class="bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600" type="submit">Send</button>
  </form>
    

</div>
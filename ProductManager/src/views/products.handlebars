<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Display</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto py-10">
    {{> navbar user=user}}
    <h1 class="text-3xl font-semibold text-center mb-8">Products Catalog for {{user.cart}}</h1>
    <input type="hidden" id="user-id-input" name="user-id" value="{{user.cart}}">
      <ul class="divide-y divide-gray-100" id="messagesList"> 
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {{#each products}}
        <li>
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h2 class="text-xl font-semibold mb-2">{{this.title}}</h2>
            <p class="text-gray-600 mb-4">{{this.description}}</p>
            <p class="text-lg text-green-600">${{this.price}}</p>
            <a href="/view/products/{{this.code}}" class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">View</a>
            <button class="addToCartBtn mt-4 inline-block bg-sky-500 text-white px-4 py-2 rounded hover:bg-sky-600" data-cart-id="{{user.cart}}" data-product-id="{{this._id}}">Add to Cart</button>
        </div>
        </li>
        {{/each}}
        </div>
      </ul>
  </div>
  <script src="../../js/products.js"></script>
</body>